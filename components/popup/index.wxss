/* 组件框架部分 */
@keyframes frameAnimateOut{
  0%{opacity: 1;top:0vh;}
  100%{opacity: 0;top:100vh;}
}
@keyframes wrapAnimate{
  0%{}
  100%{background:rgba(0,0,0,0.35);}
}
@keyframes wrapAnimateOut{
  0%{background:rgba(0,0,0,0.35);}
  100%{background:rgba(0,0,0,0);}
}
@keyframes frameAnimate{
  0%{}
  100%{opacity: 1;top:0vh;}
}
.wrapAnimate{
  animation: wrapAnimate 0.5s ease-in-out forwards;
}
.wrapAnimateOut{
  animation: wrapAnimateOut 0.4s ease-in-out forwards;
}
.frameAnimate{
  animation: frameAnimate 0.5s ease forwards;
}
.frameAnimateOut{
  animation: frameAnimateOut 0.4s ease forwards;
}
.frame-wrapper{
  position: fixed;
  height:100vh;
  width:100vw;
  z-index: 2;
  top: 50vh;
}
.frame{
  background: #fff;
  position: absolute;
  bottom: 0;
  width: 98vw;
  padding: 20rpx 1vw 0 1vw;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 3;
}
.title-wrapper{
  justify-content: space-between;
  font-size: 4.9vw;
  color: #4a4a4a;
  margin-bottom: 5.9vw;
}
.title-wrapper>image{
  width:3.2vw;
  height:3.2vw;
  padding:0 5vw;
  margin-right:-5vw;
}
.flex{
  display: flex;
  align-items: center;
}
.wrap{
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
/* 组件内容部分 */
/* 商品信息 */
