.login{
  height: 100%;
  background: #fff;
  padding: 171rpx 30rpx 50rpx 30rpx;
  box-sizing: border-box;
}
.login .top{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login .top image{
  width: 400rpx;
  height: 369rpx;
  margin-bottom: 46rpx;
}
.login .top .btn{
  height: 88rpx;
  width: 100%;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  background: rgba(252, 116, 49, 1);
  border-radius: 10rpx;
}
.login .bot{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
}
.login .bot image{
  width: 84rpx;
  height: 41rpx;
}