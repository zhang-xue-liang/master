.note{
  height: 100%;
  background: #fff;
  padding: 60rpx;
  box-sizing: border-box;
}
.note textarea{
  padding: 20rpx;
  width: 100%;
  height: 300rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
}
.note .bot{
  width: 690rpx;
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
}
.note .bot view{
  height: 88rpx;
  width: 100%;
  text-align: center;
  line-height: 88rpx;
  background: rgba(252, 116, 49, 1);
  border-radius: 10rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}