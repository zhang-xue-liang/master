.signature{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
}
.signature .handBtn{
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-content: space-between;
  flex: 1;
}
.signature .handBtn .delBtn {
  transform: rotate(90deg);
  position: absolute;
  top: 33%;
  left: -74rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  border-radius: 10rpx;
  width: 300rpx;
  height: 66rpx;
  text-align: center;
  line-height: 66rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.signature .handBtn .subBtn {
  transform: rotate(90deg);
  position: absolute;
  top: 61%;
  left: -74rpx;
  background: rgba(252, 116, 49, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  width: 300rpx;
  height: 66rpx;
  text-align: center;
  line-height: 66rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.handWriting {
  background: #fff;
  width: 100%;
  height: 100%;
}
.handCenter {
  border: 1rpx dashed rgba(204, 204, 204, 1);
  flex: 5;
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 10rpx;
}