.gdNotice{
  height: 100%;
  background: rgba(249, 249, 249, 1);
}
.gdNotice .notice-list{
  background:rgba(249, 249, 249, 1);
  padding: 0 30rpx;
}
.gdNotice .notice-list .item{
  background: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.gdNotice .notice-list .item .top .type{
  display: flex;
  justify-content: space-between;
}
.gdNotice .notice-list .item .top .type .tit{
  display: flex;
  align-items: center;
}
.gdNotice .notice-list .item .top .type .tit .empty{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: rgba(232, 0, 1, 1);
  margin-right: 10rpx;
}
.gdNotice .notice-list .item .top .type .tit .txt{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.gdNotice .notice-list .item .top .type .tim{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.gdNotice .notice-list .item .top .desc{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FF8459;
  margin: 25rpx 0 0 0;
}
.gdNotice .pop-wrap{
  width: 600rpx;
  height: 240rpx;
  padding-top: 80rpx;
  border-radius: 30rpx;
}
.gdNotice .pop-wrap .txt{
  padding: 0 122rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 48rpx;
}
.gdNotice .pop-wrap .bot{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 88rpx;
}
.gdNotice .pop-wrap .bot view{
  flex: 0 0 50%;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.gdNotice .pop-wrap .bot view:nth-child(1){
  color: #FC7431;
  border-top: 1px solid #FC7431;
}
.gdNotice .pop-wrap .bot view:nth-child(2){
  color: #fff;
  background: #FC7431;
}